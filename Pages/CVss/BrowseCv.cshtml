@page
@model CVs.Pages.CVss.BrowseCVModel 
<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Programmers List</h2>
		</div>
		<div class="col-6">

		</div>
	</div>

	<br /><br />

	<table class="table-bordered table-striped table-center" style="width:100%">
		<thead>
			<tr>
				<th>
					First name
				</th>
				<th>
					Last Name
				</th>
				<th>
					Email
				</th>

				<th>
					Gender
				</th>
				<th>
					Grade
				</th>
				<td>
					View|Edit|Delete
				</td>
				
			</tr>
		</thead>
		<tbody>
		@foreach(var programmer in @Model.programmers){
			<tr>
				<td width="25%">
					@programmer.FirstName
				</td>
				<td width="25%">
					@programmer.LastName
				</td>
				<td width="25%">
					@programmer.Email
				</td>
				<td width="25%">
					@programmer.Gender
				</td>
				<td>
					@programmer.Grade
				</td>

				
				<td>
					<div class="w-75 btn-group" role="group">
					<a asp-page="View" asp-route-id="@programmer.Id" class="btn btn-primary mx-2">
						<i class="bi bi-file-earmark-spreadsheet"></i>
					</a>
					<a asp-page="Edit" asp-route-id="@programmer.Id" class="btn btn-primary mx-2">
						<i class="bi bi-pencil square"></i>
					</a>
					<a asp-page="Delete" asp-route-id="@programmer.Id" class="btn btn-danger mx-2">
						<i class="bi bi-trash"></i>
					</a>
					</div>
				</td>
				
			</tr>
			}
		</tbody>
	</table>

</div>
